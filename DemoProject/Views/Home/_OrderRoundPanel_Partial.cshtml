
@model DemoProject.Models.Order

@Html.DevExpress().RoundPanel(settings =>
{
    settings.Name = "OrderRoundPanel";
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.View = DevExpress.Web.View.Standard;
    settings.AllowCollapsingByHeaderClick = true;
    settings.ShowCollapseButton = true;
    settings.EnableAnimation = false;
    settings.HeaderText = "Order";
    settings.ClientSideEvents.Init = "OrderRoundPanel_OnInit";

    settings.Collapsed = false;

    settings.CallbackRouteValues = new
    {
        Controller = "Home",
        Action = "_OrderRoundPanel_Partial"

    };
    settings.SetContent(() =>
    {
        Html.RenderPartial("_OrderInfo_Partial", Model);
    });
}).GetHtml()